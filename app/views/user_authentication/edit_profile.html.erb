<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="user_id_box">User</label>
        <input id="user_id_box" name="query_user_id" value="<%= @current_user.user_id %>">
      </div>
      <div>
        <label for="name_box">Name</label>
        <input id="name_box" name="query_name" value="<%= @current_user.name %>">
      </div>
      <div>
        <label for="review_count_box">Review count</label>
        <input id="review_count_box" name="query_review_count" value="<%= @current_user.review_count %>">
      </div>
      <div>
        <label for="average_stars_box">Average stars</label>
        <input id="average_stars_box" name="query_average_stars" value="<%= @current_user.average_stars %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
