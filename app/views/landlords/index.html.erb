<div class="container">
  <div class="card">
    <div class="card-header">
  <div class="dope">
    <h1>MyLandlordRatings</h1>
  </div>
  </div>
</div>

<hr>


<div class="container">
  <h3 class="my-4">Find your Landlord</h3>
  <div class="row mb-4">
    <div class="col-md-12">
      <%= form_with(url: "/landlords", method: "get", local: true, html: { class: "form-inline" }) do %>
        <div class="form-group">
          <input type="text" class="form-control" name="search" placeholder="Search...">
        </div>
        <%= submit_tag("Search", class: "btn btn-primary ml-2") %>
      <% end %>
    </div>
  </div>
  <% if @current_user != nil %>

  <button type="button" class="btn btn-primary my-4" data-toggle="modal" data-target="#writeReviewModal">
    Write a Review
  </button>

  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createLandlordModal">
  Create Landlord
</button>

  <div class="modal fade" id="writeReviewModal" tabindex="-1" role="dialog" aria-labelledby="writeReviewModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="writeReviewModalLabel">Review Information</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/reviews" method="post">
        <div class="form-group row">
          <label for="date_vacancy_box" class="col-md-2 col-form-label">Move/Out</label>
          <div class="col-md-4">
            <input type="date" class="form-control" id="date_vacancy_box" name="query_date_vacancy" value="<%= Time.now.strftime('%Y-%m-%d') %>">
          </div>
          <label for="date_occupancy_box" class="col-md-2 col-form-label">Move/In</label>
          <div class="col-md-4">
            <input type="date" class="form-control" id="date_occupancy_box" name="query_date_occupancy" value="<%= Time.now.strftime('%Y-%m-%d') %>">
          </div>
        </div>

        <div class="form-group">
          <label for="text_box">Description</label>
          <textarea class="form-control" id="text_box" name="query_text" rows="3"></textarea>
        </div>

        <div class="form-group row">
          <label for="city_box" class="col-md-2 col-form-label">City</label>
          <div class="col-md-2">
            <input type="text" class="form-control" id="city_box" name="query_city">
          </div>
          <input type="hidden" name="query_user_id" value="<%= @current_user.id %>">
          
          <label for="landlord_id_box" class="col-md-2 col-form-label">Landlord ID</label>
          <div class="col-md-2">
            <input type="text" class="form-control" id="landlord_id_box" name="query_landlord_id">
          </div>
        </div>

        <div class="form-group row">
          <label for="stars_box" class="col-md-2 col-form-label">Stars</label>
          <div class="col-md-2">
            <input type="text" class="form-control" id="stars_box" name="query_stars">
          </div>
          <label for="useful_box" class="col-md-2 col-form-label">Useful?</label>
          <div class="col-md-2">
            <select class="form-control" id="useful_box" name="query_useful">
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
         <label for="useful_box" class="col-md-2 col-form-label">Maintenance</label>
          <div class="col-md-2">
            <select class="form-control" id="useful_box" name="query_maintenance_and_repairs">
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          <label for="useful_box" class="col-md-2 col-form-label">Respect</label>
          <div class="col-md-2">
            <select class="form-control" id="useful_box" name="query_respectfulness">
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          <label for="useful_box" class="col-md-2 col-form-label">Response</label>
          <div class="col-md-2">
            <select class="form-control" id="useful_box" name="query_responsiveness">
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>

        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create Review</button>
        </div>
         </form>
        </div>
      </div>
    </div>
  </div>
<%end%>

  </div>
  <div class="card">
    <div class="card-header">Landlords</div>
    <div class="row">
      <div class="col-md-12 table-responsive">
        <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
          <th>Name</th>
          <th>Neighborhood</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zip code</th>
          <th>Updated</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @landlords.each do |a_landlord| %>
        <tr>
          
          <td><%= a_landlord.name %></td>
          <td><%= a_landlord.neighborhood %></td>
          <td><%= a_landlord.address %></td>
          <td><%= a_landlord.city %></td>
          <td><%= a_landlord.state %></td>
          <td><%= a_landlord.postal_code %></td>
          
          <td><%= time_ago_in_words(a_landlord.updated_at) %> ago</td>
          <td><a href="/landlords/<%= a_landlord.id %>" class="btn btn-primary"> Details</a></td>
          
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @landlords %>
  </div>
</div>
 </div>
</div>


<hr>


<% if @current_user.nil? %>
<% else %>
<div class="modal fade" id="createLandlordModal" tabindex="-1" aria-labelledby="createLandlordModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createLandlordModalLabel">Create Landlord</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/landlords" method="post" id="createLandlordForm">
        <div class="row mb-3">
          <div class="form-group col-md-3">
            <label for="name_box">Name</label>
            <input type="text" class="form-control" id="name_box" name="query_name" placeholder="Enter Landlord...">
          </div>

          <div class="form-group col-md-6">
            <label for="address_box">Address</label>
            <input type="text" class="form-control" id="address_box" name="query_address" placeholder="Enter Address...">
          </div>

          <div class="form-group col-md-3">
            <label for="neighborhood_box">Neighborhood</label>
            <input type="text" class="form-control" id="neighborhood_box" name="query_neighborhood" placeholder="Neighborhood">
          </div>

</div>

<div class="row mb-3">

          <div class="form-group col-md-3">
            <label for="city_box">City</label>
            <input type="text" class="form-control" id="city_box" name="query_city" placeholder="Enter City...">
          </div>
    
            <div class="form-group col-md-3" name="query_state">
              <label for="inputState" name="query_state">State</label>
