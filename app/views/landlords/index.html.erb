<div class="container">
<h3 class="my-4">List of Landlords</h3>
  <div class="card">
    <div class="card-header"></div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Neighborhood</th>
              <th>Address</th>
              <th>City</th>
              <th>State</th>
              <th>Zip code</th>
              <th>Stars</th>
              <th>Caption</th>
              <th>Updated at</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @list_of_landlords.each do |a_landlord| %>
            <tr>
              <td><%= a_landlord.id %></td>
              <td><%= a_landlord.name %></td>
              <td><%= a_landlord.neighborhood %></td>
              <td><%= a_landlord.address %></td>
              <td><%= a_landlord.city %></td>
              <td><%= a_landlord.state %></td>
              <td><%= a_landlord.postal_code %></td>
              <td><%= a_landlord.stars %></td>
              <td><%= a_landlord.caption %></td>
              <td><%= time_ago_in_words(a_landlord.updated_at) %> ago</td>
              <td><a href="/landlords/<%= a_landlord.id %>" class="btn btn-primary">Show details</a></td>
              <td><a href="/delete_landlord/<%= a_landlord.id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?')">Delete</a></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



