<div>
  <div>
    <h1>
      Landlord #<%= @the_landlord.id %> details
    </h1>

    <div>
      <div>
        <a href="/landlords">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_landlord/<%= @the_landlord.id %>">
          Delete landlord
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_landlord.name %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
        <%= @the_landlord.neighborhood %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_landlord.address %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @the_landlord.state %>
      </dd>

      <dt>
        Postal code
      </dt>
      <dd>
        <%= @the_landlord.postal_code %>
      </dd>

      <dt>
        Latitude
      </dt>
      <dd>
        <%= @the_landlord.latitude %>
      </dd>

      <dt>
        Longitude
      </dt>
      <dd>
        <%= @the_landlord.longitude %>
      </dd>

      <dt>
        Stars
      </dt>
      <dd>
        <%= @the_landlord.stars %>
      </dd>

      <dt>
        Review count
      </dt>
      <dd>
        <%= @the_landlord.review_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_landlord.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_landlord.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

