<div class="container">
  <div class="card">
    <div class="card-header">
      <div class="dope">
        <h1>MyLandlordRatings</h1>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-6 mx-auto">
  
    <%= form_with(url: "/landlords/", method: "get", local: true, html: { class: "form-inline" }) do %>
      <div class="form-group" style="width: 100%;">

        <input type="text" class="form-control" name="search" placeholder="Search by landlord, address, or neighborhood.." style="width: 100%;">
      </div>
      <%= submit_tag("Search", class: "btn btn-primary ml-2") %>
    <% end %>
    <small class="form-text text-muted">Enter a landlord name, address, or neighborhood to search</small>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Stars</th>
      <th>Occupancy Date</th>
      <th>Vacancy Date</th>
      <th>Review Text</th>
      <th>Useful</th>
      <th>City</th>
      <th>Maintenance & Repairs</th>
      <th>Respectfulness</th>
      <th>Responsiveness</th>
      <!-- add more columns as needed -->
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.stars %></td>
        <td><%= review.date_occupancy %></td>
        <td><%= review.date_vacancy %></td>
        <td><%= review.text %></td>
        <td><%= review.useful %></td>
        <td><%= review.city %></td>
        <td><%= review.maintenance_and_repairs %></td>
        <td><%= review.respectfulness %></td>
        <td><%= review.responsiveness %></td>
        <!-- add more fields as needed -->
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @reviews %>
